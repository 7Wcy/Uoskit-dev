#!/bin/bash

# 提取常量
DEFAULT_EMAIL="wangchengyu@uniontech.com"
DEFAULT_GITHUB_EMAIL="w2524180509@163.com"
SSH_KEY_PATH="$HOME/.ssh/id_rsa.pub"

while true; do
    # 输出操作菜单
    echo "选择要执行的操作（1、2、3或4）:
    1. 生成默认SSH密钥
    2. 生成自定义SSH密钥
    3. 生成github默认SSH密钥
    4. 删除SSH密钥
    （默认邮箱为 $DEFAULT_EMAIL）
    "

    # 选择要执行的操作
    read -p "输入选择: " choice

    if [ "$choice" == "1" ]; then
        # 生成默认SSH密钥
        git config --global user.name "WangChengYu"
        git config --global user.email "$DEFAULT_EMAIL"
        yes "" | ssh-keygen -t rsa -C "$DEFAULT_EMAIL"
        echo "已生成SSH密钥:"
        cat $SSH_KEY_PATH
        break
    elif [ "$choice" == "2" ]; then
        # 生成自定义SSH密钥
        read -p "输入用户名: " username
        read -p "输入邮箱: " email

        git config --global user.name "$username"
        git config --global user.email "$email"

        yes "" | ssh-keygen -t rsa -C "$email"
        echo "已生成自定义SSH密钥:"
       cat $SSH_KEY_PATH
        break
    elif [ "$choice" == "3" ]; then
        # 生成自定义GITHUB-SSH密钥
        ssh-keygen -t rsa -b 4096 -C "w2524180509@163.com"
        cat ~/.ssh/id_rsa.pub
        pwd
        echo ""
        echo "正在测试连接情况..."
        ssh -T git@github.com
        
        break
    elif [ "$choice" == "4" ]; then
        # 删除SSH密钥
        sudo rm -rf ~/.ssh/
        echo "已删除SSH密钥"
        break
    else
        echo "无效的选择，请重新输入。"
    fi
done
